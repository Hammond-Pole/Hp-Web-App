<div class="custom-component">
    <label for="@QuestionFieldLabel" class="bold-label">@QuestionFieldLabel:</label>
    <input type="number"  id="@QuestionFieldLabel" @onchange="OnValueChanged" />
</div>

@code {

    [Parameter] public int DocumentId { get; set; }
    [Parameter] public int QuestionFieldId { get; set; }
    [Parameter] public string QuestionFieldLabel { get; set; }
    [Parameter]
    public double Value { get; set; }
    [Parameter]
    public EventCallback<dynamic> ValueChanged { get; set; }

    private async Task OnValueChanged(ChangeEventArgs e)
    {
        string value = e.Value.ToString();
        Console.WriteLine($"The new value is {value}");
        await ValueChanged.InvokeAsync(e);
    }
}